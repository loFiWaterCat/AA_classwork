<% if type = :new %>
  <% action_controller = bands_url %>
  <% button_text = "Create album" %>
<% end %>

<form action="<%= action_controller %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Name:
    <input type="text", name="band[name]", value="">
  </label>
  <input type="submit", value="<%= button_text %>">
</form>


